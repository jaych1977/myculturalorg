# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Google Forms Integration (Method 1)
# Get these from your Google Form's HTML (view page source)
EXPO_PUBLIC_GOOGLE_FORM_ACTION_URL=https://docs.google.com/forms/d/e/YOUR_FORM_ID/formResponse
EXPO_PUBLIC_GOOGLE_FORM_EVENT_NAME_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_DONOR_NAME_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_CONTACT_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_EMAIL_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_REPRESENTATIVE_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_TRANSACTION_ID_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_AMOUNT_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_CURRENCY_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_DATE_ENTRY=entry.XXXXXXX
EXPO_PUBLIC_GOOGLE_FORM_METHOD_ENTRY=entry.XXXXXXX

# Google Sheets API Integration (Method 2)
# Get these from Google Cloud Console
EXPO_PUBLIC_GOOGLE_SHEETS_SPREADSHEET_ID=YOUR_SPREADSHEET_ID
EXPO_PUBLIC_GOOGLE_SHEETS_API_KEY=YOUR_API_KEY

# Payment Gateway Configuration (for future use)
EXPO_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id
EXPO_PUBLIC_STRIPE_PUBLIC_KEY=your_stripe_public_key

# API Configuration
EXPO_PUBLIC_API_BASE_URL=https://api.example.com
EXPO_PUBLIC_API_TIMEOUT=30000

# App Configuration
EXPO_PUBLIC_APP_NAME=My Cultural Organisation
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ORGANIZATION_EMAIL=contact@myculturalorg.com
EXPO_PUBLIC_ORGANIZATION_PHONE=+91-1234-567-890

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_SOCIAL_SHARING=true
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=false

# Debug/Development
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=info
